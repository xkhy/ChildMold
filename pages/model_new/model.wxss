.model-detail .cell-group {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 359rpx;
  margin: 0 20rpx;
  padding: 54rpx 0 36rpx 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.model-detail .cell-group .cell {
  display: flex;
}

.model-detail .cell-group .cell .row {
  flex: 1;
  font-size: 28rpx;
  color: #444;
}

.model-detail .model-introduce {
  padding: 35rpx 40rpx 85rpx;
  font-size: 28rpx;
  color: #444;
}

.model-detail .contact-private {
  display: flex;
  align-items: center;
}

.model-detail .contact-private image {
  width: 48rpx;
  height: 48rpx;
}

.model-detail .contact-private .phone {
  margin-left: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #444;
}

.model-detail .contact-public {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background-color: #EF8501;
}

.model-detail .contact-public image {
  width: 48rpx;
  height: 48rpx;
}

.model-detail .contact-public .phone {
  margin-left: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.model-group {
  padding: 20rpx 10rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: #fff;
}

.model-group .model-single {
  width: 228rpx;
  margin-bottom: 12rpx;
}

.model-group .model-single .model-image {
  height: 228rpx;
  border-radius: 8rpx;
}

.model-group .edit {
  margin-bottom: 22rpx;
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #EF8501;
  border-radius: 8rpx;
}
