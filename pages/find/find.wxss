.container .tabs {
  display: flex;
  justify-content: center;
}

.container .tabs .tab {
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  border: 2rpx solid #ccc;
  color: #999;
}

.container .tabs .tab:first-child {
  border-radius: 8rpx 0 0 8rpx;
}

.container .tabs .tab:last-child {
  border-radius: 0 8rpx 8rpx 0;
}

.container .tabs .tab-active {
  border: none;
  color: #fff;
  background-color: #EF8501;
}

.container .card {
  width: 330rpx;
}

.container .card .card-title {
  display: flex;
  align-items: center;
  height: 62rpx;
}

.container .card .card-title .card-icon {
  width: 64rpx;
  height: 64rpx;
}
