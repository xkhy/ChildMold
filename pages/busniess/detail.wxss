image {
  width: 100%;
}

swiper {
  height: 750rpx;
}

swiper image {
  height: 100%;
}

.tab {
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #EF8501;
  border-top: 6rpx solid #f7f7f7;
  border-bottom: 6rpx solid #f7f7f7;
}

.cell-group {
  margin: 0 40rpx;
}

.cell {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #444;
  font-size: 28rpx;
}

.cell .follow {
  height: 50rpx;
  line-height: 50rpx;
  background: #EF8501;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 0;
}

.cell .model-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 28rpx;
}

.cell .model-row text {
  font-size: 28rpx;
  flex: 1;
}

.cell .model-row .vip {
  width: 48rpx;
  height: 42rpx;
  margin: 0 24rpx;
}

.cell-introduce {
  height: auto;
  padding: 0;
  border-top: 2rpx solid #ddd;
  line-height: 1.6;
}

.edit {
  width: 100%;
  height: 108rpx;
  background-color: #fff;
}

.edit .edit-btn {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #EF8501;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}
