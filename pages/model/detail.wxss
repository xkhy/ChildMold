image {
  width: 100%;
}

swiper {
  height: 750rpx;
}

swiper image {
  height: 100%;
}

.tabs {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 4rpx solid #f7f7f7;
  border-bottom: 6rpx solid #f7f7f7;
}

.tabs .tab {
  position: relative;
  flex: 1;
  line-height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

.tabs .tab-active {
  color: #EF8501;
}

.tabs .tab-active::after {
  content: "";
  position: absolute;
  bottom: -5rpx;
  left: 50%;
  margin-left: -38rpx;
  width: 76rpx;
  height: 6rpx;
  background-color: #EF8501;
}

.cell-group {
  margin: 30rpx 40rpx;
  border-radius: 8rpx;
}

.cell {
  display: flex;
  flex-wrap: wrap;
  margin: 30 0rpx;
  color: #444;
  font-size: 28rpx;
}

.cell .name {
  margin-right: 20rpx;
  font-size: 36rpx;
  color: #EF8501;
}

.cell .follow {
  height: 50rpx;
  line-height: 50rpx;
  background: #EF8501;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
}

.cell .model-row {
  display: flex;
  flex: 1 1 50%;
  margin-bottom: 8rpx;
  line-height: 1.8;
  font-size: 28rpx;
}

.cell .model-row text {
  font-size: 28rpx;
}

.cell .row-address {
  flex: 1 1 100%;
}

.cell-introduce {
  border-top: 2rpx solid #ddd;
  line-height: 1.6;
}

.model-group {
  padding: 26rpx 0 0 22rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.model-group .model-single {
  width: 228rpx;
  height: 228rpx;
  margin-bottom: 12rpx;
  margin-right: 12rpx;
}

.model-group .model-single image {
  width: 228rpx;
  height: 228rpx;
  border-radius: 8rpx;
}

.edit {
  margin-top: 56rpx;
  width: 100%;
  height: 108rpx;
  background-color: #fff;
}

.edit .edit-btn {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #EF8501;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
}
