<view class="container">
  <swiper indicator-dots indicator-active-color="#EF8501" indicator-color="#fff" autoplay="3000" interval="5000" duration="500">
    <block wx:for="{{imgUrls}}" wx:key="{{item}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <i-tabs color="#EF8501" i-class="tabs" current="{{ current }}" bindchange="handleChange">
    <i-tab key="tab1" title="推荐"></i-tab>
    <i-tab key="tab2" title="人气"></i-tab>
    <i-tab key="tab3" title="新人"></i-tab>
</i-tabs>
