<view class="caption-wrap">
  <view class="search-bar">
      <input placeholder="请输入关键字"/>
      <button>搜索</button>
      <text bindtap="toggleFilters">筛选</text>
      <view class="{{showFilters?'top-arrow':'bottom-arrow'}}"></view>
  </view>
  <view wx:if="{{showFilters}}" class="drawer-container">
    <view class="filters">
      <view class="filter-name">性别</view> 
      <view class="tag tag-sex-boy  tag-active">男</view>
      <view class="tag tag-sex-girl">女</view>
    </view>
    <view class="filters">
      <view class="filter-name">身高</view>       
      <input type="digit" class="tag tag-height"/>
      <view class="line"></view>
      <input type="digit" class="tag tag-height"/>女
    </view>
    <view class="filters">
        <view class="filter-name">地区</view>  
        <picker
        mode="region"
        bindchange="bindRegionChange"
        value="{{region}}"
        custom-item="{{customItem}}"
      >
        <view class="tag tag-address">
          {{region[0]}}-{{region[1]}}-{{region[2]}}
        </view>
      </picker>
    </view>
  </view>
  <view class="model-group">
      <view class="model-single"  wx:for="{{modelList}}" wx:key="item.id" bindtap="toModel">
        <image class="model-image" src="{{item}}"></image>
        <view class="model-info">
          <text class="model-name">王晶晶</text>
          <view class="model-attention">
              <image src="../../assets/icon/heart.png" class="heart"></image>
              <text>263</text>  
          </view>
        </view>
      </view>
  </view>
</view>