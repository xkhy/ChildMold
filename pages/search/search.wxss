@charset "UTF-8";
image {
  width: 100%;
}

.search-wrap {
  border-top: 4rpx solid #f7f7f7;
}

.search-bar {
  position: relative;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 3rpx solid #f7f7f7;
}

.search-bar .search-icon {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  left: 38rpx;
  top: 50%;
  margin-top: -24rpx;
}

.search-bar input {
  width: 459rpx;
  height: 70rpx;
  background: #eee;
  border-radius: 35rpx;
  font-size: 26rpx;
  padding-left: 3em;
}

.search-bar button {
  width: 121rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #EF8501;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
}

.search-bar text {
  font-size: 28rpx;
  color: #444;
}

.search-bar .bottom-arrow {
  font-size: 0;
  line-height: 0;
  border-width: 10rpx;
  border-color: #000;
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
}

.search-bar .top-arrow {
  font-size: 0;
  line-height: 0;
  border-width: 10rpx;
  border-color: #000;
  border-top-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
}

.drawer-container {
  height: 372rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom: 3rpx solid #f7f7f7;
}

.drawer-container .filters {
  display: flex;
  align-items: center;
  color: #444;
  font-size: 28rpx;
}

.drawer-container .filters .filter-name {
  width: 135rpx;
  text-align: center;
}

.drawer-container .filters-btns {
  margin: 0 214rpx;
  display: flex;
  justify-content: space-between;
}

.drawer-container .filters-btns .filters-btn {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.drawer-container .filters-btns .reset {
  border: 2rpx solid #EF8501;
  color: #EF8501;
}

.drawer-container .filters-btns .confirm {
  color: #fff;
  background: #EF8501;
}

.drawer-container .tag {
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
  color: #999;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
}

.drawer-container .tag-sex-boy {
  border-radius: 8rpx 0rpx 0rpx 8rpx;
}

.drawer-container .tag-sex-girl {
  border-radius: 0rpx 8rpx 8rpx 0rpx;
}

.drawer-container .tag-height {
  width: 208rpx;
  text-align: left;
  padding-left: 2em;
  position: relative;
}

.drawer-container .tag-height::after {
  position: absolute;
  display: block;
  content: "厘米";
  top: 0;
  right: 32rpx;
}

.drawer-container .line {
  width: 42rpx;
  height: 3rpx;
  margin: 0 11rpx;
  border: 2rpx solid #ccc;
}

.drawer-container .tag-address {
  width: 480rpx;
}

.drawer-container .tag-active {
  background-color: #EF8501;
  color: #fff;
  border: 0;
}

.model-group {
  padding: 20rpx 10rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: #fff;
}

.model-group .model-single {
  width: 228rpx;
  margin-bottom: 12rpx;
}

.model-group .model-single .model-image {
  height: 228rpx;
  border-radius: 8rpx;
}

.model-group .model-single .model-info {
  display: flex;
  justify-content: space-around;
  align-items: center;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
}

.model-group .model-single .model-info .model-name {
  color: #444;
  font-size: 30rpx;
}

.model-group .model-single .model-info .model-attention {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.model-group .model-single .model-info .heart {
  width: 24rpx;
  height: 24rpx;
  margin-right: 14rpx;
}
