image {
  width: 100%;
}

page {
  background-color: #f7f7f7;
}

.margin {
  margin-top: 36rpx;
}

.bg {
  height: 360rpx;
  background-image: url("http://pic.tongzgc.com/4b2ae209446d24c07db516c138b5b21c.png");
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}

.bg image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.cell-group .cell {
  display: block;
  padding: 0 40rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 2rpx solid #f7f7f7;
}

.cell-group .cell image {
  width: 48rpx;
  height: 48rpx;
}

.cell-group .cell .customer_service_wx {
  widows: 45rpx;
  height: 33rpx;
}

.cell-group .cell text {
  flex: 1;
  margin-left: 22rpx;
  font-size: 28rpx;
  color: #444;
}

.cell-group .cell .right-arrow {
  width: 25rpx;
  height: 25rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
}

.modal-box {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  top: 0rpx;
  width: 100%;
  height: 100%;
}

.modal-content {
  margin-top: 200rpx;
  height: 500rpx;
  border-radius: 10rpx;
  text-align: center;
}

.modal-content image {
  width: 500rpx;
  height: 100%;
}

.knowBtn {
  height: 100rpx;
  width: 500rpx;
}
