<view class="container">
      <view class="tabs">
        <view class="tab {{type==2?'tab-active':''}}" bindtap="changeType" data-type="2">关注的童模</view>
        <view class="tab {{type==1?'tab-active':''}}" bindtap="changeType" data-type="1">关注的商家</view>
      </view>
      <!-- 关注的童模 -->
      <view wx:if="{{type==2}}" class="model-group">
          <view class="model-single"  wx:for="{{followList}}" wx:key="{{item.id}}" data-id="{{item.id}}" bindtap="toDetail">
            <image class="model-image" src="{{item.cover}}"></image>
            <view class="model-info">
              <text class="model-name">{{item.name}}</text>
              <view class="model-attention">
                  <image src="../../../assets/icon/heart.png" class="heart"></image>
                  <text>{{item.fans}}</text>  
              </view>
            </view>
          </view>
      </view>
      <!-- 关注的商家 -->
      <view wx:if="{{type==1}}" class="card" wx:for="{{followList}}" wx:key="{{item.id}}" data-id="{{item.id}}" bindtap="toDetail">
        <view class="card-content">
            <view class="card-img">
              <!-- <image src="{{item.avatar}}"></image> -->
              <image src="/assets/images/model1.png"></image>
            </view>
            <view class="card-info">
              <view class="card-title">
                  <view>
                    <image wx:if="{{item.is_approve}}" class="vip-icon" src="/assets/icon/find_vip.png"></image>
                    <image wx:else class="shop-icon" src="/assets/icon/find_shop.png"></image>
                  </view>
                  <text >{{item.name}}</text>
                  <button wx:if="{{item.is_follow}}" class="follow" bindtap="follow">已关注</button>
                  <button wx:else class="follow" bindtap="follow">关注</button>
              </view>
              <view class="cell">
                商家简介：{{item.profile}}
              </view>
            </view>
        </view>
        </view>
      </view>